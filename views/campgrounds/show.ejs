<% layout('layouts/boilerplate') %>
    <p>
        <%- include('../partials/flash.ejs')%>
    </p>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%= campground.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title"><%=campground.title %> </h5>
                    <p class="card-text"><%=campground.description%></p>
                </div>
                <ul class="list-group text-center list-group-flush">
                    <li class="list-group-item"> Submitted by: <%=campground.author.username %> </li>
                    <li class="list-group-item text-muted"> <%=campground.location %> </li>
                    <li class="list-group-item" >$<%=campground.price %> / night </li>
                </ul>

                <% if(currentUser && campground.author.equals(currentUser._id)){ %>
                    <div class="card-body text-center ">
                        <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id %>/edit">Edit</a>
                            
                        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>            
                    </div>
                    <div class="card-footer text-muted text-center">
                        2 days ago
                    </div>
                <% } %>
            </div>
        </div>

        <div class="col-6">
        <% if(currentUser){ %>
            <h2>Leave a review</h2>

            <form method="POST" class="mb-3 validated-form" action="/campgrounds/<%=campground._id%>/reviews/new" novalidate>

                <label for="rating" class="form-label mb-3">Rating</label>
                <select id="rating" name="review[rating]" required>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option> 
                </select>

                <div>
                    <label for="body" class="form-label">Body:</label>
                    <textarea id="body" name="review[body]" row="3" class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% } %>

                <% campground.reviews.map(review => { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-title">Rating: <%= review.rating %> </p>
                            <p class="card-subtitle mb-2 text-muted">By: <%= review.author.username %></p>
                            <p class="card-text"><%= review.body %></p>
                         
                            <% if(currentUser && review.author.equals(currentUser._id)) {%>
                                <form method="POST" action="/campgrounds/<%= campground._id %>/reviews/<%= review._id%>?_method=DELETE">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
        </div>
    </div>

