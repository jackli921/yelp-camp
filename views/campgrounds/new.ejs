<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center mb-3">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" required name="campground[title]"> 
                     <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" required name="campground[location]">
                     <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Image Upload</label>
                    <input class="form-control" name="image" type="file" id="formFile" accept="image/png, image/jpeg" multiple> 
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price">$</span>
                        </div>
                        <input type="text" name="campground[price]" required class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label">
                             <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" required name="campground[description]"></textarea>
                     <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>

            <footer>
                <a href="/campgrounds">All Campgrounds</a>
            </footer>
            </div>
        </div>
    </div>
</div>
