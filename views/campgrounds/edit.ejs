<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
    
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" value="<%= campground.title %>"  required  name="campground[title]">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" value="<%=campground.location  %>" required  name="campground[location]">
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                   <label class="form-label" for="image">Add Image</label>
                   <input type="file" name="image" id="image" accept="image/png, image/jpeg" multiple>
                   
                    <div class="valid-feedback">Looks good!</div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price">$</span>
                        </div>
                        <input type="text" name="campground[price]" value="<%=campground.price%>"  required class="form-control" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label">
                            <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" required  name="campground[description]"><%=campground.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Save Campground</button>
                </div>
            </form>
    
            <footer>
                <a href="/campgrounds/<%=campground._id %>">Back</a>
            </footer>
        </div>
    </div>
